@model IEnumerable<PersonDetailsOutputModel>

@{ ViewData["Title"] = "Dashboard"; }

<div class="row">
    <div class="col-lg-4 offset-lg-4">
        <h2>Dashboard</h2>
    </div>
</div>

<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th scope="col">ID</th>
            <th scope="col">First name</th>
            <th scope="col">Last name</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var person in Model)
        {
<tr>
    <td>@person.Id</td>
    <td>@person.FirstName</td>
    <td>@person.LastName</td>
    <td>
        <a class="btn btn-primary"
           asp-area=""
           asp-controller="People"
           asp-action="Details"
           asp-route-id="@person.Id">
            Edit
        </a>
    </td>
</tr>
}
    </tbody>
</table>

<div class="row">
    <div class="col-12">
        <a class="btn btn-primary"
           asp-area=""
           asp-controller="People"
           asp-action="Details">
            Add new
        </a>
    </div>
</div>